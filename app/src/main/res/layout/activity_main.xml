<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextTextEmailAddress6"
        android:layout_width="272dp"
        android:layout_height="69dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:freezesText="false"
        android:inputType="textEmailAddress"
        android:text="Enter  Your Email/Phone no."
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#938F8F"
        android:textColorHighlight="#FFEB3B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="173dp"
        android:layout_height="64dp"
        android:text="Reset Password"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="329dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="630dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="67dp"
        android:background="@color/white"
        android:src="@android:drawable/ic_lock_idle_lock"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:layout_height="47dp"
        android:text="Don't have an account?"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="583dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="274dp"
        android:layout_height="60dp"
        android:text="Verify Your Account"
        android:textColor="#0C0B0B"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="160dp" />

</androidx.constraintlayout.widget.ConstraintLayout>